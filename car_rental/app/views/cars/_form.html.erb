<%= render 'shared/errors', object:@car %>

<%= form_with(model: car, local: true) do |form| %>

  <div class="field">
    <%= form.file_field :image %>
  </div>



  <div class="field">
    <%= form.text_field :model , class: "form-control",  autofocus: true, placeholder: "Model..."%>
  </div>

  <div class="field">
    <%= form.number_field :productionYear,class: "form-control",  autofocus: true, placeholder: "Production Year..." %>
  </div>

  <div class="field">
    <%= form.text_field :discription,class: "form-control",  autofocus: true, placeholder: "Description..." %>
  </div>

<!--  <div class="field">-->
    <%#= form.text_field :rank,class: "form-control",  autofocus: true, placeholder: "Rank..." %>
<!--    <div id="star-rating"></div>-->
<!--  </div>-->

  <div class="field">
    <%= form.text_area :rent,class: "form-control",  autofocus: true, placeholder: "RentedCar..." %>
  </div>

  <div class="field">
    <%= form.number_field :seats,class:"form-control",  autofocus: true, placeholder: "Number of seats..." %>
  </div>

  <div class="row">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-4">
      <div class="field">
        <%= form.label :aircondition %>
        <%= form.check_box :airconditioned ,class: "form-control"%>
      </div>
    </div>
    <div class="col-sm-2">
    </div>
    <div class="col-sm-4">
      <div class="field">
        <%= form.label :automatic %>
        <%= form.check_box :automatic, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
      <div class="log-btn">
        <%= form.submit "Done",class: "btn" %>
      </div>
    </div>
  </div>

<% end %>


