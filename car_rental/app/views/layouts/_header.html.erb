<!--== Header Area Start ==-->
<header id="header-area" class="fixed-top">
  <!--== Header Top Start ==-->
  <div id="header-top" class="d-none d-xl-block">
    <div class="container">
      <div class="row">
        <!--== Single HeaderTop Start ==-->
        <div class="col-lg-3 text-left">
          <i class="fa fa-map-marker"></i> 802/2, Mirpur, Dhaka
        </div>
        <!--== Single HeaderTop End ==-->

        <!--== Single HeaderTop Start ==-->
        <div class="col-lg-3 text-center">
          <i class="fa fa-mobile"></i> +1 800 345 678
        </div>
        <!--== Single HeaderTop End ==-->

        <!--== Single HeaderTop Start ==-->
        <div class="col-lg-3 text-center">
          <i class="fa fa-clock-o"></i> Mon-Fri 09.00 - 17.00
        </div>
        <!--== Single HeaderTop End ==-->

        <!--== Social Icons Start ==-->
        <div class="col-lg-3 text-right">
          <div class="header-social-icons">
            <a href="#"><i class="fa fa-behance"></i></a>
            <a href="#"><i class="fa fa-pinterest"></i></a>
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
          </div>
        </div>
        <!--== Social Icons End ==-->
      </div>
    </div>
  </div>
  <!--== Header Top End ==-->

  <!--== Header Bottom Start ==-->
  <div id="header-bottom">
    <div class="container">
      <div class="row">
        <!--== Logo Start ==-->
        <div class="col-lg-4">
          <a href="index.html" class="logo">
            <%= image_tag("logo.png", alt: "JSOFT") %>
          </a>

          <%= form_tag('/search', :method => "get",
                       class: 'navbar-form navbar-left') do %>
            <div class="input-group">
              <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
              <select id="attribute" , name="attribute" , class="form-control">
                <option value="None" id="None">--Select--</option>
                <option value="Name" name="name">Model name</option>
                <option value="Year" name="year">Year</option>
                <option value="Price" name="price">Price</option>
              </select><br> <br>
              <div class="input-group-btn">
                <%= button_tag "submit", :class => 'btn btn-info glyphicon glyphicon-search', :name => nil %>
              </div>
            </div>
          <% end %>

        </div>
        <!--== Logo End ==-->

        <!--== Main Menu Start ==-->
        <div class="col-lg-8 d-none d-xl-block">
          <nav class="mainmenu alignright">
            <ul>
              <li><%= link_to 'Home', root_path %></li>

              <li><a href="about.html">About</a></li>
              <li><a href="services.html">services</a></li>
              <li class="active"><a href="#">Cars</a>
                <ul>
                  <li><%= link_to 'Cars', cars_path %></li>
                  <% if logged_in? %>
                    <li><%= link_to "Favourite", saved_path %></li>
                    <li><%= link_to "My Rents",rent_car_path%></li>
                    <% if current_user.admin? %>
                      <li><%= link_to "Rented Cars", rented_cars_path %></li>
                    <% end %>
                  <% end %>
                </ul>
              </li>

              <li><a href="index.html">Pages</a>
                <ul>
                  <li><a href="package.html">Pricing</a></li>
                  <li><a href="driver.html">Driver</a></li>
                  <li><a href="faq.html">FAQ</a></li>
                  <li><a href="gallery.html">Gallery</a></li>
                  <li><a href="help-desk.html">Help Desk</a></li>
                </ul>
              </li>
              <li><a href="#">Blog</a>
                <ul>
                  <li><a href="article.html">Blog Page</a></li>
                  <li><a href="article-details.html">Blog Details</a></li>
                </ul>
              </li>
              <li><a href="contact.html">Contact</a></li>
              <% if logged_in? %>

                <% if current_user.admin? %>
                  <li><a href="#">Settings</a>
                    <ul>
                      <li><%= link_to 'Add new car', new_car_path %></li>
                    </ul>
                  </li>
                <% end %>

                <li><%= link_to 'Logout', logout_path, method: :delete %></li>

              <% else %>
                <li><%= link_to 'Login', login_path %></li>
              <% end %>

            </ul>
          </nav>
        </div>
        <!--== Main Menu End ==-->
      </div>
    </div>
  </div>
  <!--== Header Bottom End ==-->
</header>
<!--== Header Area End ==-->


