<%= render 'shared/errors', object:@rented_car %>
<%= form_with(model: rented_car, local: true) do |form| %>

    <div class="field">
      <%= form.text_field :credit_card_no,class: "form-control",  autofocus: true, placeholder: "Credit Card Number" %>
    </div>


    <div class="field">
      <%= form.text_field :cvc,class: "form-control",  autofocus: true, placeholder: "CVC" %>
    </div>

    <div class="field">
      <h6>Card Expired Date:</h6>
      <%= form.date_field  :credit_expired_date ,class:"form-control",  autofocus: true, placeholder: "Card Expired Date" , min: Date.today%>
    </div>

    <div class="field">
      <h6>Rent From:</h6>
      <%= form.date_field  :rent_from_date ,class:"form-control",  autofocus: true, placeholder: "From" , min: Date.today%>
    </div>

    <div class="field">
      <h6>Rent To:</h6>
      <%= form.date_field  :rent_to_date ,class:"form-control",  autofocus: true, placeholder: "To" , min: Date.today%>
    </div>


    <div class="row">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-6">
        <div class="log-btn">
          <%= form.submit "Rent",class: "btn" %>
        </div>
      </div>
    </div>
  <% end %>

