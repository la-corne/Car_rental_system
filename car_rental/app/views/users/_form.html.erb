<%= render 'shared/errors', object:@user %>

<%= form_with(model: user, local: true) do |form| %>

  <div class="field">
    <%= form.text_field :user_name , class: "form-control",  autofocus: true, placeholder: "Username"%>
  </div>

  <div class="field">
    <%= form.password_field :password, class: "form-control",  autofocus: true, placeholder: "Password"  %>
  </div>

  <div class="field">
    <%= form.text_field :email,class: "form-control",  autofocus: true, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= form.text_field :name ,class: "form-control",  autofocus: true, placeholder: "Name" %>
  </div>

  <div class="field">
    <%= form.text_field :address ,class: "form-control",  autofocus: true, placeholder: "Address" %>
  </div>

  <div class="field">
    <%= form.date_select :dob ,class:"form-control",  autofocus: true, placeholder: "Data of birth" %>
  </div>

    <div class="field">
      <%= form.number_field :age ,class:"form-control",  autofocus: true, placeholder: "Age is 18+" %>
    </div>

    <div class="field">
      <%= form.number_field :points ,class:"form-control",  autofocus: true, placeholder: "Points" %>
    </div>

    <div class="field">
      <%= form.check_box :admin, class: "form-control" %>
    </div>

  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
      <div class="log-btn">
        <%= form.submit "Done",class: "btn" %>
      </div>
    </div>
  </div>

<% end %>
