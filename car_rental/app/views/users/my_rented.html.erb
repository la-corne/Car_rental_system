        <% else %>

          <section id="page-404-wrap" class="section-padding overlay">
            <div class="container">
              <div class="row">

                <div class="col-lg-12 text-center">
                  <div class="page-404-content">
                    <div class="number">
                      <div class="four">F</div>
                      <div class="zero">
                        <%= image_tag("404.png", alt: "JSOFT") %>
